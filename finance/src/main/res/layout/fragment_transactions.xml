<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionsFragment"
    tools:showIn="@layout/activity_transactions">

    <SearchView
        android:id="@+id/transaction_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/total_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/transaction_search_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/standard_layout_margin"
        android:text="@string/label_finance_total_balance"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/total_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/transaction_search_bar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/standard_layout_margin"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_balance_label"
        android:layout_marginLeft="@dimen/standard_layout_margin"
        android:text="@string/label_finance_available_balance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/available_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/total_balance_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/standard_layout_margin"
        android:textAppearance="?android:textAppearanceMedium"
        />

    <View
        android:id="@+id/separator_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/available_balance_text"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactions_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/separator_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</androidx.constraintlayout.widget.ConstraintLayout>