<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="24dp">

    <LinearLayout
        android:id="@+id/weather_card_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weather_card_title"
            style="@style/weather_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/weather_forecast_title_today" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="6dp"
            android:background="#CCCCCC" />

        <GridLayout
            android:id="@+id/weather_card_forecasts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4" />
    </LinearLayout>
</android.support.v7.widget.CardView>